<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.zhaeong.worktracker.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:background="@drawable/border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activeTaskDisplay"
            android:layout_alignParentBottom="true"
            android:textSize="30sp"
            android:layout_margin="10dp"
            android:maxLines="1" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/task_list"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:layout_above="@id/activeTaskDisplay"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/addtaskFAB"
            app:elevation="7dp"
            android:layout_above="@+id/activeTaskDisplay"
            android:layout_alignRight="@+id/task_list"
            android:layout_alignEnd="@+id/task_list"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            app:backgroundTint="?attr/actionModeSplitBackground" />

    </RelativeLayout>

    <ListView android:id="@+id/right_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>
